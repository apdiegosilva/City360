<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    android:padding="8dp"
    tools:context="city360.fernandosoares.com.city360.EsqueciSenhaActivity">

    <Button
        android:id="@+id/btnEnviarId"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/txtEmail"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignRight="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="38dp"
        android:background="@color/Azul"
        android:drawableLeft="@drawable/entrar"
        android:text="Enviar"
        android:textColor="@color/Fundo_app"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Selecione o seu perfil:"
        android:textColor="@color/Texto_city"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="33dp" />

    <RadioGroup
        android:id="@+id/radioGrupoId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <RadioButton
            android:id="@+id/rbtCidadaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="     CidadÃ£o"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtServidorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="     Servidor"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGrupoId"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/Azul" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnviarId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:text="Digite o e-mail cadastrado:"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
