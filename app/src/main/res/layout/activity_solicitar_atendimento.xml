<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    android:padding="8dp"
    tools:context="city360.fernandosoares.com.city360.SolicitarAtendimentoActivity">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Requerimento Padrão"
        android:textColor="@color/Laranja"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:text="Selecione o tipo de solicitação:"
        android:textColor="@color/Laranja" />

    <Spinner
        android:id="@+id/spinnerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerId"
        android:layout_marginTop="10dp"
        android:text="Fundamentação:"
        android:textColor="@color/Laranja" />

    <EditText
        android:id="@+id/txtFundamentacao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView23"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtFundamentacao"
        android:layout_alignStart="@+id/txtFundamentacao"
        android:layout_below="@+id/txtFundamentacao"
        android:layout_marginTop="8dp"
        android:background="@color/Laranja"
        android:drawableLeft="@drawable/delete"
        android:text="limpar texto"
        android:textColor="@color/Fundo_app" />

    <Button
        android:id="@+id/btnAnexarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCameraId"
        android:layout_alignStart="@+id/btnCameraId"
        android:layout_below="@+id/btnCameraId"
        android:layout_marginTop="12dp"
        android:background="@color/Laranja"
        android:drawableLeft="@drawable/anexo"
        android:text="Anexar arquivo"
        android:textColor="@color/Fundo_app" />

    <Button
        android:id="@+id/btnCameraId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLimpar"
        android:layout_alignStart="@+id/btnLimpar"
        android:layout_below="@+id/btnLimpar"
        android:layout_marginTop="8dp"
        android:background="@color/Laranja"
        android:drawableLeft="@drawable/camera"
        android:text="Câmera"
        android:textColor="@color/Fundo_app" />

    <Button
        android:id="@+id/btnEnviarSolicitacaoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCameraId"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnCameraId"
        android:layout_marginBottom="12dp"
        android:background="@color/Laranja"
        android:drawableLeft="@drawable/salvar"
        android:text="Enviar solicitação"
        android:textColor="@color/Fundo_app" />
</RelativeLayout>
