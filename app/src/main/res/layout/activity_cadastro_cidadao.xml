<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    tools:context="city360.fernandosoares.com.city360.CadastroCidadaoActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Preencha os campos"
        android:textColor="@color/texto_meio_tela"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="abaixo e crie sua conta"
        android:textColor="@color/texto_meio_tela"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etxtCpfId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number"
        android:textColorHint="@color/Texto_city"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etxtSenhaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etxtCpfId"
        android:layout_alignStart="@+id/etxtCpfId"
        android:layout_below="@+id/etxtCpfId"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/Texto_city"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etxtConfirmarSenhaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etxtSenhaId"
        android:layout_alignStart="@+id/etxtSenhaId"
        android:layout_below="@+id/etxtSenhaId"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Confirmar Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/Texto_city"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnCadastrarId"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/etxtConfirmarSenhaId"
        android:layout_alignLeft="@+id/etxtConfirmarSenhaId"
        android:layout_alignRight="@+id/etxtConfirmarSenhaId"
        android:layout_alignStart="@+id/etxtConfirmarSenhaId"
        android:layout_below="@+id/etxtConfirmarSenhaId"
        android:layout_marginTop="44dp"
        android:background="@color/Texto_city"
        android:text="CADASTRAR"
        android:textColor="@color/texto_meio_tela"
        android:textSize="18dp" />

</RelativeLayout>
