<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    tools:context="city360.fernandosoares.com.city360.RelatarActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Relatar problema"
        android:textColor="@color/Verde"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="Motivo da reclamação:"
        android:textColor="@color/Texto_city" />

    <Spinner
        android:id="@+id/spnMotivos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/spnMotivos"
        android:layout_marginTop="15dp"
        android:text="Setor:"
        android:textColor="@color/Texto_city" />

    <Spinner
        android:id="@+id/spnSetores"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spnMotivos"
        android:layout_alignRight="@+id/spnMotivos"
        android:layout_alignTop="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/spnSetores"
        android:layout_marginTop="10dp"
        android:text="Mensagem:"
        android:textColor="@color/Texto_city"
        android:textColorLink="@color/Texto_city" />

    <Button
        android:id="@+id/btnEnviarSolicitacaoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@color/Verde"
        android:drawableLeft="@drawable/salvar"
        android:text="enviar solicitação"
        android:textColor="@color/Fundo_app" />

    <EditText
        android:id="@+id/txtMensagemId"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtMensagemId"
        android:layout_alignRight="@+id/txtMensagemId"
        android:layout_below="@+id/txtMensagemId"
        android:text="Anônimo:" />

    <Button
        android:id="@+id/btnLimparId"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtMensagemId"
        android:layout_alignStart="@+id/txtMensagemId"
        android:layout_below="@+id/txtMensagemId"
        android:background="@color/Verde"
        android:text="limpar texto"
        android:textColor="@color/Fundo_app"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imgCameraId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_below="@+id/btnLimparId"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLimparId"
        android:layout_alignRight="@+id/btnLimparId"
        android:layout_alignTop="@+id/imgCameraId"
        app:srcCompat="@drawable/clip" />

</RelativeLayout>
