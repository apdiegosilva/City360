<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    tools:context="city360.fernandosoares.com.city360.RelatarActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="O que você tem para nos contar?"
        android:textColor="@color/texto_meio_tela"
        android:textColorHighlight="@color/Texto_city"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="7dp"
        android:background="@color/Texto_city"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imgElogioId"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@drawable/like"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/elogio"
        android:textColor="@color/texto_meio_tela"
        android:textSize="14sp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignTop="@+id/imageView"
        android:background="@color/Texto_city"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imgSugestaoId"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/sugestao"
        android:layout_alignTop="@+id/imgElogioId"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Sugestão"
        android:textColor="@color/texto_meio_tela"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignTop="@+id/imageView4"
        android:background="@color/Texto_city"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imgSolicitacaoId"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imgSugestaoId"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        app:srcCompat="@drawable/solicitacao" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView13"
        android:layout_alignEnd="@+id/spinnerId"
        android:layout_alignRight="@+id/spinnerId"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Solicitação"
        android:textColor="@color/texto_meio_tela"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView10"
        android:background="@color/Texto_city"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imgReclamacaoId"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_alignRight="@+id/imageView10"
        android:layout_alignTop="@+id/imageView10"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/likevirado" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerId"
        android:layout_alignStart="@+id/spinnerId"
        android:layout_below="@+id/imageView10"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:text="Reclamação"
        android:textColor="@color/texto_meio_tela"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:background="@color/Texto_city"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imgDenunciaId"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imgReclamacaoId"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        app:srcCompat="@drawable/megafone" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        android:text="@string/den_ncia"
        android:textColor="@color/texto_meio_tela"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Escolha acima o motivo:"
        android:textColor="@color/texto_meio_tela"
        android:textSize="15sp"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <TextView
        android:id="@+id/txtMotivoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:textColorHighlight="@color/Texto_city"
        android:textColor="@color/Texto_city"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem"
        android:textSize="15sp"
        android:textColor="@color/texto_meio_tela"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Setor:"
        android:textColor="@color/texto_meio_tela"
        android:textSize="15sp"
        android:layout_below="@+id/txtMotivoId"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anônimo  "
        android:textColor="@color/texto_meio_tela"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textMultiLine" />



    <Spinner
        android:id="@+id/spinnerId"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@android:color/background_light"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgElogioId"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignRight="@+id/imgElogioId"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/anexo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/camera"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/txtMotivoId"
        android:layout_alignStart="@+id/txtMotivoId"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <Button
        android:id="@+id/btnEnviarSolicitacaoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Texto_city"
        android:text="Enviar"
        android:textColor="@color/texto_meio_tela"
        android:textSize="18dp"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
