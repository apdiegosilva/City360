<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_app"
    tools:context="city360.fernandosoares.com.city360.LoginCidadaoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="@string/TÃ­tulo"
        android:textColor="@color/Verde"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/extCpfId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        android:textColorHint="@color/Texto_city"
        android:textColorLink="@color/Verde" />

    <EditText
        android:id="@+id/etxtSenhaId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEsqueciSenhaId"
        android:layout_alignRight="@+id/txtEsqueciSenhaId"
        android:layout_below="@+id/textView33"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/Texto_city"
        android:textColorHint="@color/Texto_city"
        android:textColorLink="@color/Verde" />

    <Button
        android:id="@+id/btnAcessoCidadaoId"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/txtEsqueciSenhaId"
        android:layout_alignRight="@+id/txtEsqueciSenhaId"
        android:layout_below="@+id/txtEsqueciSenhaId"
        android:layout_marginTop="36dp"
        android:background="@color/Verde"
        android:drawableLeft="@drawable/entrar"
        android:paddingLeft="40dp"
        android:text="Acessar"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtCriarContaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/extCpfId"
        android:layout_alignRight="@+id/extCpfId"
        android:layout_below="@+id/extCpfId"
        android:layout_marginTop="12dp"
        android:text="@string/Conta"
        android:textColor="@color/texto_meio_tela" />

    <TextView
        android:id="@+id/txtEsqueciSenhaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtCriarContaId"
        android:layout_alignRight="@+id/txtCriarContaId"
        android:layout_below="@+id/etxtSenhaId"
        android:layout_marginTop="9dp"
        android:text="@string/REcuperar_senha"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/extCpfId"
        android:layout_alignStart="@+id/extCpfId"
        android:layout_below="@+id/textView"
        android:text="CPF:"
        android:textColor="@color/Verde"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etxtSenhaId"
        android:layout_alignStart="@+id/etxtSenhaId"
        android:layout_below="@+id/txtCriarContaId"
        android:text="Senha:"
        android:textColor="@color/Verde"
        android:textStyle="bold" />

</RelativeLayout>
